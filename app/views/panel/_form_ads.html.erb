<%= form_for(@obj, :remote => true, :url => {:controller => "panel", :action => (action_name == "editar" ? "editar" : "crear"), :params => {:set => params[:set], :id => (@obj.id if action_name == "editar")}}, :html => { :multipart => true}) do |f| %>
  <% if @obj.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@obj.errors.count, "error") %> prohibited this frase from being saved:</h2>

      <ul>
      <% @obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <div class="field">
    <%= f.label :titulo, "Título" %><br>
    <%= f.text_field :titulo %>
  </div>
  <div class="field">
    <%= f.label :texto, "Texto" %><br>
    <%= f.text_area :texto %>
  </div>
  <div class="field">
    <%= f.label :fecha_pub, "Fecha de publicación" %><br>
    <%= f.text_field :fecha_pub, {"data-provide" => "datepicker"} %>
  </div>
  <div class="field">
    <%= f.label :fecha, "Vigencia" %><br>
    <%= f.text_field :fecha, {"data-provide" => "datepicker"} %>
  </div>
  <div class="field" style="height:250px;">
		<div class="photo-upload">
    <%= f.label :imagen, raw('<span class="glyphicon glyphicon-upload glyph-padding"></span>Añadir imagen') %><br>
    <%= f.file_field :imagen, :onchange => "readURL(this,'#foto-ad')" %><br>
		</div>
		<div class="img-display">
			<% if !@obj.imagen.url.nil? %>
				<img id="foto-ad" src="<%= @obj.imagen.url %>">
			<% else %>
				<span>No hay imagen para mostrar.</span>
			<% end %>
		</div>
  </div>
  <div class="actions">
    <%= f.submit "Guardar anuncio" %>
  </div>
<% end %>

<script>
$('#ad_fecha').datepicker({
    format: 'yyyy-mm-dd',
		language: 'es'
 });
$('#ad_fecha_pub').datepicker({
    format: 'yyyy-mm-dd',
		language: 'es'
 });
</script>
