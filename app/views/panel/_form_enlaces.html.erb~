<%= form_for(@obj, :remote => true, :url => {:controller => "panel", :action => (action_name == "editar" ? "editar" : "crear"), :params => {:set => params[:set], :id => (@obj.id if action_name == "editar")}}, :html => {:multipart => true}) do |f| %>
  <% if @obj.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@obj.errors.count, "error") %> prohibited this frase from being saved:</h2>

      <ul>
      <% @obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <div class="field">
    <%= f.label :categoria, "Categoría" %><br>
    <%= f.select(:categoria,[["Guatemala","Guatemala"],["México","México"],["Centro y Sudamérica","Centro y Sudamérica"],["Estados Unidos","Estados Unidos"],["Otros países","Otros países"],["Naciones Unidas","Naciones Unidas"],["Universidades e institutos","Universidades e institutos"],["Fundaciones","Fundaciones"],["Derechos Humanos","Derechos Humanos"]], selected: (@obj.categoria || "Guatemala") %>
  </div>
  <div class="field">
    <%= f.label :subcategoria, "Subcategoría" %><br>
    <%= f.select(:categoria,[["Dependencias del Poder Ejecutivo","Dependencias del Poder Ejecutivo","Dependencias del Poder Ejecutivo"],["Poder Legislativo","Poder legislativo"],["Estados de la República Mexicana","Estados de la República Mexicana"],["Organismos ciudadanos y académicos","Organismos ciudadanos y académicos"]], include_blank: true, selected: (@obj.categoria || "") %>
  </div>
  <div class="field">
    <%= f.label :info, "Información" %><br>
    <%= f.text_field :info %>
  </div>
  <div class="field">
    <%= f.label :link, "Liga" %><br>
    <%= f.text_field :link %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar enlace" %>
  </div>
<% end %>
